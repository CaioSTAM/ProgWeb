<h1>Usuários</h1>

<a href="/users/create">Novo Usuário</a>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Major</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.major.name}}</td>
        <td>
          <a href="/users/edit/{{this.id}}">Editar</a>
          <form action="/users/delete/{{this.id}}" method="POST" style="display:inline;">
            <button type="submit">Excluir</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
